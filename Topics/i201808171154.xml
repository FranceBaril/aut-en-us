<?xml version="1.0" encoding="UTF-8"?>
<rules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:oasis:names:tc:dita:xsd:ditabase.xsd" id="i2018081171154" status="new">
    <title id="z200">&lt;title&gt; in rules</title>
    <abstract id="abstract"><shortdesc id="shortdesc">Rule titles name the element to which the rules apply, and if necessary, the context for the rules.</shortdesc></abstract>
    <rulesbody id="a0">
        <rule id="a1">
            <rule-statement id="z300">When an element occurs in more than one context, use the context in the title.</rule-statement>
            <justification id="a2">The context allows readers to find the appropriate rule.</justification>
            <examplefig id="a3" judgement="good">
                <desc id="a4"/>
                <codeblock id="a5" conref="i20170521114732719#title" outputclass="dita-to-text"/>
                <!-- topic: title in tasks -->
            </examplefig>
        </rule>
        <rule id="a6">
            <rule-statement id="z301">Use sentence capitalization in titles.</rule-statement>
            <justification id="a7">This allows more flexible reuse of the element in automated aggregates such as training slides or marketing documents.</justification>
            <examplefig id="a8" judgement="good">
                <desc id="a9"/>
                <codeblock id="a10" conref="i20170521114732719#title" outputclass="dita-to-text"/>
                <!-- topic: title in tasks -->
            </examplefig>
        </rule>
    </rulesbody>
</rules>