<?xml version="1.0" encoding="UTF-8"?>
<rules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:oasis:names:tc:dita:xsd:ditabase.xsd" id="i20170521142004967" status="new">
   <title id="title">&lt;title&gt; in references</title>
   <abstract id="abstract"><shortdesc id="shortdesc">Reference titles are single words or expressions that identify what the topic describes.</shortdesc></abstract>
   <prolog id="prolog">
      <author id="author">France Baril</author>
      <publisher id="publisher">Architextus</publisher>
      <critdates id="critdates">
         <created id="created" date="2017-05-21"/>
      </critdates>
   </prolog>
   <rulesbody id="body">
      <rule id="a0"><rule-statement id="a1">When <if-condition id="a2">documenting computer commands</if-condition>, <action id="a3">capitalize the command names as per industry standards</action>.</rule-statement>
      <examplefig id="a4" judgement="good">
         <codeblock id="a5">&lt;title&gt;task&lt;/title&gt;
&lt;title&gt;steps&lt;/title&gt;
&lt;title&gt;COUNT&lt;/title&gt;</codeblock>
      </examplefig></rule>
      <rule id="a6">
         <rule-statement id="a7">When <if-condition id="a8">references define a collection of entries</if-condition>, <action id="a9">use plural nouns as titles</action>.
         </rule-statement>
         <examplefig id="a13" judgement="good">
            <codeblock id="a14">&lt;title&gt;Engine part numbers&lt;/title&gt;
&lt;title&gt;Account types&lt;/title&gt;
&lt;title&gt;New features&lt;/title&gt;</codeblock>
         </examplefig>
      </rule>
   </rulesbody>
</rules>